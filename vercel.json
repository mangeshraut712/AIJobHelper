{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/main.py"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/frontend/$1"
        }
    ],
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ]
}