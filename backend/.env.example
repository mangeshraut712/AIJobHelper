# Environment Variables for Backend
# Copy this file to .env and fill in your actual values

# ==============================================
# REQUIRED: AI Configuration
# ==============================================
# OpenRouter API Key - Get yours at: https://openrouter.ai/keys
# This is the ONLY required variable for the app to work
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# ==============================================
# Application Settings
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==============================================
# API Configuration
# ==============================================
# API timeout in seconds (for AI responses)
API_TIMEOUT=60

# Maximum file upload size (10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt

# ==============================================
# CORS Configuration
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================
# AI Model Configuration (Optional)
# ==============================================
# Default model to use (leave blank for default)
# AI_MODEL=qwen/qwen-2.5-coder-32b-instruct
# AI_TEMPERATURE=0.7
# AI_MAX_TOKENS=4000

# ==============================================
# Performance (Optional)
# ==============================================
# Maximum concurrent workers
MAX_WORKERS=4

# Cache expiration in seconds
CACHE_EXPIRATION=3600

# ==============================================
# Feature Flags (Optional)
# ==============================================
ENABLE_RATE_LIMITING=false
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false

# ==============================================
# Production Settings (Vercel)
# ==============================================
# These are automatically set by Vercel
# VERCEL=1
# VERCEL_ENV=production
# IS_OFFLINE=false

# ==============================================
# Notes
# ==============================================
# 1. The OPENROUTER_API_KEY is the only required variable
# 2. All other variables have sensible defaults
# 3. For local development, just set OPENROUTER_API_KEY
# 4. For Vercel, set environment variables in the dashboard
# 5. Never commit your actual .env file!
